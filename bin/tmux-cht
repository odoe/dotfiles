#!/usr/bin/env bash

languages=$(echo "golang c cpp javascript typescript rust elixir" | tr " " "\n")
core_utils=$(echo "find xargs sed awk tar" | tr " " "\n")
selected=$(echo -e "$languages\n$core_utils" | fzf)

read -p "QUERY: " query

if echo "$languages" | grep -qs $selected; then
    tmux split-window -h bash -c "curl cht.sh/$selected/`echo "$query" | tr " " "+"` | bat & while [ : ]; do sleep 1; done"
else
    tmux split-window -h bash -c "curl cht.sh/$selected~$query | bat & while [ : ]; do sleep 1; done"
fi
